<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:mongodb="http://www.liquibase.org/xml/ns/dbchangelog-ext/mongodb"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.21.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext/mongodb
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1-create-payment-collection" author="Vitaliy">
        <mongodb:createCollection collectionName="payment"/>
    </changeSet>

    <changeSet id="2-create-indexes" author="Vitaliy">
        <mongodb:createIndex collectionName="payment">
            <mongodb:keys>{"orderId": 1}</mongodb:keys>
        </mongodb:createIndex>

        <mongodb:createIndex collectionName="payment">
            <mongodb:keys>{"userId": 1}</mongodb:keys>
        </mongodb:createIndex>

        <mongodb:createIndex collectionName="payment">
            <mongodb:keys>{"status": 1}</mongodb:keys>
        </mongodb:createIndex>
    </changeSet>

</databaseChangeLog>
